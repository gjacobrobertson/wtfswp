<div class="message">
    <p>
        <%= welcome_message %>
    </p>
</div>
<div class="form">
    <%= form_tag("find", :class => 'form-inline', :method => 'get') do %>
        <%= text_field_tag 'username', @gamepicker.username, :placeholder => 'BGG Username' %>
        <%= number_field_tag 'players', @gamepicker.players, :placeholder => 'Players' %>
        <%= submit_tag "FUCKING GO", :class => "btn"%>
    <% end %>
</div>